  <!-- Настройки MathJax (опционально) -->
  <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
      tex2jax: {
        inlineMath: [['\\(','\\)']],
        displayMath: [['\\[','\\]']],
        processEscapes: true
      }
    });
  </script>
  <!-- Подключение стилей темы -->
  {% if site.theme %}
    <link rel="stylesheet" href="{{ '/assets/css/style.css' | relative_url }}">
